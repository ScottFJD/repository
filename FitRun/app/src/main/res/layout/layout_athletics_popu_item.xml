<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="250px"
              android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/purple">
    <RelativeLayout
        android:id="@+id/athletis_item_one"
        android:layout_width="match_parent"
        android:layout_height="65px"
        android:background="@drawable/layout_select">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="26px"
            android:text="耐力竞技"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_marginLeft="45px"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@drawable/divider_bg"></View>
    <RelativeLayout
        android:id="@+id/athletis_item_two"
        android:layout_width="match_parent"
        android:layout_height="65px"
        android:background="@drawable/layout_select">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="26px"
            android:text="卡路里竞技"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_marginLeft="45px"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@drawable/divider_bg"></View>
    <RelativeLayout
        android:id="@+id/athletis_item_three"
        android:layout_width="match_parent"
        android:layout_height="65px"
        android:background="@drawable/layout_select">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="26px"
            android:text="速度竞技"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_marginLeft="45px"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@drawable/divider_bg"></View>
    <RelativeLayout
        android:id="@+id/athletis_item_four"
        android:layout_width="match_parent"
        android:layout_height="65px"
        android:background="@drawable/layout_select">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="26px"
            android:text="接力赛竞技"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_marginLeft="45px"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@drawable/divider_bg"></View>

</LinearLayout>
