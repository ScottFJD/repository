    <ImageView
        android:layout_width="85px"
        android:layout_height="18px"
        android:layout_marginTop="998px"
        android:layout_marginLeft="665px"
        android:background="@drawable/logo_text"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#bbbbbb"
        android:layout_marginTop="993px"
        android:layout_marginLeft="765px"
        android:textSize="18px"
        android:text="斐跑商务信息咨询(上海)有限公司  公众号:飞跑跑步fitRun"/>
