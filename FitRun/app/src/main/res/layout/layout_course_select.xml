        android:layout_marginLeft="305px">

    </net.fitrun.fitrungame.view.TipViewNoImage>
    <ImageView
        android:layout_width="19px"
        android:layout_height="24px"
        android:layout_marginTop="902px"
        android:layout_marginLeft="1032px"
        android:background="@mipmap/notif_n"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="898px"
        android:layout_marginLeft="1066px"
        android:textSize="22px"
        android:textColor="@color/noti_title"
