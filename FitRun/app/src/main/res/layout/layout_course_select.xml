<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:background="@drawable/speedy_sport_bg">
    <ImageView
        android:id="@+id/back"
        android:layout_width="92px"
        android:layout_height="92px"
        android:layout_marginTop="10px"
        android:scaleType="fitXY"
        android:background="@drawable/back"
        android:layout_marginLeft="107px"/>

    <TextView
        android:id="@+id/choicen_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="44px"
        android:layout_marginTop="29px"
        android:layout_marginLeft="214px"
        android:textColor="@color/border_yello"
        android:textStyle="bold"
        android:text="精选课程"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="112px"
        android:layout_marginLeft="593px"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_marginLeft="40px"
            android:layout_width="60px"
            android:layout_height="60px"
            android:background="@drawable/sport_loding">
            <ImageView
                android:id="@+id/speedy_distance_image"
                android:layout_width="30px"
                android:layout_height="32px"
                android:scaleType="fitXY"
                android:layout_gravity="center"/>
        </FrameLayout>
        <TextView
            android:id="@+id/speedy_distance_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12px"
            android:textSize="32px"
            android:textColor="@color/white"
            android:text="5.32"/>
        <TextView
            android:id="@+id/speedy_distance_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26px"
            android:layout_marginLeft="6px"
            android:textColor="@color/white"
            android:text="km"/>
        <com.fang.dashview.DashView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:dashWidth="2dp"
            app:lineWidth="4dp"
            app:lineColor="@android:color/white"
            app:dashOrientation="1"
            app:lineHeight="1dp"
            android:layout_marginLeft="40px"
            android:layout_marginTop="20px"
            android:layout_marginBottom="20px"/>
        <FrameLayout
            android:layout_marginLeft="40px"
            android:layout_width="60px"
            android:layout_height="60px"
            android:background="@drawable/sport_loding">

            <ImageView
                android:id="@+id/speedy_time_image"
                android:layout_width="30px"
                android:layout_height="30px"
                android:scaleType="fitXY"
                android:layout_gravity="center"/>
        </FrameLayout>
        <TextView
            android:id="@+id/speedy_time_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12px"
            android:textSize="32px"
            android:textColor="@color/white"
            android:text="30.67"/>
        <TextView
            android:id="@+id/speedy_time_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26px"
            android:layout_marginLeft="6px"
            android:textColor="@color/white"
            android:text="min"/>
        <com.fang.dashview.DashView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:dashWidth="2dp"
            app:lineWidth="4dp"
            app:lineColor="@android:color/white"
            app:dashOrientation="1"
            app:lineHeight="1dp"
            android:layout_marginLeft="40px"
            android:layout_marginTop="20px"
            android:layout_marginBottom="20px"/>
        <FrameLayout
            android:layout_marginLeft="40px"
            android:layout_width="60px"
            android:layout_height="60px"
            android:background="@drawable/sport_loding">
            <ImageView
                android:id="@+id/speedy_heart_image"
                android:layout_width="30px"
                android:layout_height="30px"
                android:scaleType="fitXY"
                android:layout_gravity="center"/>
        </FrameLayout>
        <TextView
            android:id="@+id/speedy_heat_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12px"
            android:textSize="32px"
            android:textColor="@color/white"
            android:text="30.67"/>
        <TextView
            android:id="@+id/speedy_heat_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26px"
            android:layout_marginLeft="6px"
            android:textColor="@color/white"
            android:text="kcal"/>
    </LinearLayout>
    <ImageView
