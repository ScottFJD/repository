<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:background="@drawable/creat_course_bg">
    <ImageView
        android:id="@+id/back"
        android:layout_width="92px"
        android:layout_height="92px"
        android:layout_marginTop="10px"
        android:scaleType="fitXY"
        android:background="@drawable/back"
        android:layout_marginLeft="107px"/>
    <ImageView
        android:id="@+id/creat_bg"
        android:layout_width="1384px"
        android:layout_height="882px"
        android:background="@drawable/question_tybg"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/course_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="52px"
        android:textColor="@color/text_bg"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="147px"
        android:text="减肥课程"/>
    <TextView
        android:layout_width="1200px"
        android:layout_height="1px"
        android:layout_centerHorizontal="true"
        android:background="@color/line"
        android:layout_marginTop="237sp"></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="36px"
        android:layout_marginLeft="421px"
        android:layout_marginTop="284px"
        android:text="课程周期"/>
    <RelativeLayout
        android:id="@+id/cycle_select"
        android:layout_width="200px"
        android:layout_height="124px"
        android:layout_marginLeft="1364px"
        android:layout_marginTop="244px">
        <TextView
            android:id="@+id/cycle_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#AEAEAE"
            android:textSize="32px"
            android:layout_centerVertical="true"
            android:text="1个月"
            android:textStyle="bold"
            android:layout_marginLeft="45px"/>
        <ImageView
            android:layout_toRightOf="@id/cycle_id"
            android:layout_width="29px"
            android:layout_height="13px"
            android:scaleType="fitXY"
            android:layout_marginLeft="24px"
            android:layout_centerVertical="true"
            android:background="@drawable/spinner"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="400px"
        android:layout_height="124px"
        android:layout_marginLeft="1164px"
        android:layout_marginTop="361px"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <TextView
            android:id="@+id/unit_kg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="36px"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20px"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:text="kg"/>
        <EditText
            android:id="@+id/edit_kg"
            android:textColor="#AEAEAE"
            android:textSize="34px"
            android:inputType="number"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/unit_kg"
            android:layout_width="400px"
            android:layout_height="wrap_content"
            android:hint="请输入减肥目标"
            android:textColorHint="#AEAEAE"/>
    </RelativeLayout>
    <TextView
        android:layout_width="1200px"
        android:layout_height="1px"
        android:layout_centerHorizontal="true"
        android:background="@color/line"
        android:layout_marginTop="361sp"></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="36px"
        android:layout_marginLeft="421px"
        android:layout_marginTop="403px"
        android:text="减肥目标"/>
    <TextView
        android:layout_width="1200px"
        android:layout_height="1px"
        android:layout_centerHorizontal="true"
        android:background="@color/line"
        android:layout_marginTop="484sp"></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="36px"
        android:layout_marginLeft="421px"
        android:layout_marginTop="524px"
        android:text="请选择您希望的训练日期"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30px"
        android:textColor="#AEAEAE"
        android:layout_marginTop="524px"
        android:layout_marginLeft="858px"
        android:text="(我们推荐一周跑3-4次)"/>
    <LinearLayout
        android:layout_width="893px"
        android:layout_height="81px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="620px"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/monday"
            android:layout_width="80px"
            android:layout_height="80px"
            android:textSize="26px"
            android:layout_marginLeft="39px"
            android:gravity="center"
            android:text="周一"
            android:background="@drawable/tag_bg"
            android:textColor="@drawable/text_color">
        </TextView>
        <TextView
            android:id="@+id/tuesday"
            android:layout_width="80px"
            android:layout_height="80px"
            android:textSize="26px"
            android:layout_marginLeft="39px"
            android:gravity="center"
            android:text="周二"
            android:background="@drawable/tag_bg"
            android:textColor="@drawable/text_color">
        </TextView>

        <TextView
            android:id="@+id/wed"
            android:layout_width="80px"
            android:layout_height="80px"
            android:textSize="26px"
            android:layout_marginLeft="39px"
            android:gravity="center"
            android:text="周三"
            android:background="@drawable/tag_bg"
            android:textColor="@drawable/text_color">
        </TextView>

        <TextView
            android:id="@+id/thursday"
            android:layout_width="80px"
            android:layout_height="80px"
            android:textSize="26px"
            android:layout_marginLeft="39px"
            android:gravity="center"
            android:text="周四"
            android:background="@drawable/tag_bg"
            android:textColor="@drawable/text_color">
        </TextView>

        <TextView
            android:id="@+id/friday"
            android:layout_width="80px"
            android:layout_height="80px"
            android:textSize="26px"
            android:layout_marginLeft="39px"
            android:gravity="center"
            android:text="周五"
            android:background="@drawable/tag_bg"
            android:textColor="@drawable/text_color">
        </TextView>

        <TextView
            android:id="@+id/saturday"
            android:layout_width="80px"
            android:layout_height="80px"
            android:textSize="26px"
            android:layout_marginLeft="39px"
            android:gravity="center"
            android:text="周六"
            android:background="@drawable/tag_bg"
            android:textColor="@drawable/text_color">
        </TextView>

        <TextView
            android:id="@+id/sunday"
            android:layout_width="80px"
            android:layout_height="80px"
            android:textSize="26px"
            android:layout_marginLeft="39px"
            android:gravity="center"
            android:text="周日"
            android:background="@drawable/tag_bg"
            android:textColor="@drawable/text_color">
        </TextView>

    </LinearLayout>
    <TextView
        android:layout_width="1200px"
        android:layout_height="1px"
        android:layout_centerHorizontal="true"
        android:background="@color/line"
        android:layout_marginTop="756sp"></TextView>
    <ImageView
        android:id="@+id/creat_plan"
        android:layout_width="291px"
        android:layout_height="89px"
        android:layout_marginTop="799px"
        android:layout_centerHorizontal="true"
        android:background="@drawable/creat_plan"/>
</RelativeLayout>
