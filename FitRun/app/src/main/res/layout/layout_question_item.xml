<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="277px"
        android:layout_marginTop="44px">
        <TextView
            android:id="@+id/sport_type_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="44px"
            android:textStyle="bold"
            android:textColor="@color/border_yello"
            android:text="运动指数调查"/>
        <TextView
            android:id="@+id/sport_type_kl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:textSize="44px"
            android:textStyle="bold"
            android:textColor="@color/border_yello"
            android:text="("/>
        <TextView
            android:id="@+id/question_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/border_yello"
            android:textSize="44px"
            android:text="1"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/sport_type_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/border_yello"
            android:textSize="44px"
            android:text="/"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/question_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/border_yello"
            android:textSize="44px"
            android:text=""
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/sport_type_kr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/border_yello"
            android:textSize="44px"
            android:text=")"
            android:textStyle="bold"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/up_question"
        android:layout_width="71px"
        android:layout_height="71px"
        android:layout_centerVertical="true"
        android:layout_marginLeft="120px"
        android:background="@drawable/question_select"/>
    <ImageView
        android:id="@+id/down_question"
        android:layout_width="71px"
        android:layout_height="71px"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="120px"
        android:rotation="180"
        android:background="@drawable/question_select"/>
    <LinearLayout
        android:id="@+id/bc_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/question_tybg"
        android:layout_centerVertical="true"
        android:layout_marginLeft="276px"
        android:layout_marginRight="276px">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:layout_marginTop="30px"
            android:gravity="center">
            <TextView
                android:id="@+id/question_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="25px"
                android:textStyle="bold"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="70px"
            android:layout_marginRight="70px"
            android:background="@color/line"></View>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/question_item_content"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:layout_marginBottom="29px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>
        <View
            android:id="@+id/question_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="70px"
            android:layout_marginRight="70px"
            android:visibility="gone"
            android:background="@color/line"></View>
    <LinearLayout
        android:id="@+id/lock_layout"
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:visibility="gone"
        android:layout_marginBottom="25px"
        android:gravity="center">
        <ImageView
            android:id="@+id/lock_result"
            android:layout_width="290px"
            android:layout_height="80px"
            android:layout_gravity="center"
            android:background="@drawable/look_result"/>
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/next"
        android:layout_marginTop="54px"
        android:layout_below="@id/bc_question"
        android:layout_centerHorizontal="true"
        android:layout_width="250px"
        android:layout_height="88px"
        android:textSize="40px"
        android:visibility="gone"
        android:textColor="@color/white"
        android:background="@color/text_yello"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="下一步"/>
</RelativeLayout>
