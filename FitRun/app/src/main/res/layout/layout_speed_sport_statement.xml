<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
             android:background="@drawable/creat_course_bg">
    <ImageView
        android:id="@+id/statement_main_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <ImageView
        android:id="@+id/back"
        android:layout_width="71px"
        android:layout_height="71px"
        android:layout_marginTop="21px"
        android:layout_marginLeft="110px"
        android:scaleType="fitXY"
        android:background="@drawable/back"/>
    <ImageView
        android:layout_width="211px"
        android:layout_height="50px"
        android:layout_marginTop="31px"
        android:layout_marginLeft="231px"
        android:background="@drawable/sport_statement_text"/>
    <ImageView
        android:id="@+id/iv_zxing"
        android:layout_width="152px"
        android:layout_height="152px"
        android:layout_marginTop="174px"
        android:layout_marginLeft="159px"
        android:scaleType="fitXY"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28px"
        android:layout_marginLeft="140px"
        android:layout_marginTop="339px"
        android:textColor="@color/white"
        android:text="扫描二维码分享"
        android:textStyle="bold"/>
    <ImageView
        android:id="@+id/exit_login"
        android:layout_width="201.6px"
        android:layout_height="75.6px"
        android:layout_gravity="right"
        android:layout_marginTop="25px"
        android:layout_marginRight="100px"
        android:elevation="20px"
        android:background="@drawable/exit_bg"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="223px"
        android:layout_marginLeft="465px"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/sport_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/text_f4ea"
            android:textSize="40px"
            android:text="运动类型："/>
        <TextView
            android:id="@+id/sport_type_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/text_f4ea"
            android:textSize="40px"
            android:text=""/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="304px"
        android:layout_marginLeft="508px"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26px"
            android:textColor="@color/text_bbbb"
            android:text="运动时间："/>
        <TextView
            android:id="@+id/current_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26px"
            android:textColor="@color/text_bbbb"
            android:text=""/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="792px"
        android:layout_height="580px"
        android:layout_marginLeft="113px"
        android:layout_marginTop="395px"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="29px"
                    android:layout_height="29px"
                    android:background="@drawable/time_bg"/>
                <TextView
                    android:id="@+id/sport_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="46px"
                    android:text="0min"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="26px"
                    android:textColor="@color/text_bbbb"
                    android:text="跑步时间"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="29px"
                    android:layout_height="29px"
                    android:background="@drawable/dis_bg"/>
                <TextView
                    android:id="@+id/sport_dis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="46px"
                    android:text="0.0km"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="26px"
                    android:textColor="@color/text_bbbb"
                    android:text="跑步距离"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="26px"
                    android:layout_height="26px"
                    android:background="@drawable/kcal_bag"/>
                <TextView
                    android:id="@+id/sport_kcal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="46px"
                    android:text="0.0kcal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="26px"
                    android:textColor="@color/text_bbbb"
                    android:text="消耗热量"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="29px"
                    android:layout_height="29px"
                    android:background="@drawable/heart_bg"/>
                <TextView
                    android:id="@+id/sport_max_heart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="46px"
                    android:text="0/min"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="26px"
                    android:textColor="@color/text_bbbb"
                    android:text="最大心率"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="30px"
                    android:layout_height="24px"
                    android:background="@drawable/max_speed_bg"/>
                <TextView
                    android:id="@+id/sport_max_speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="46px"
                    android:text="0.0km/h"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="26px"
                    android:textColor="@color/text_bbbb"
                    android:text="最大速度"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="30px"
                    android:layout_height="24px"
                    android:background="@drawable/mean_speed"/>
                <TextView
                    android:id="@+id/sport_mean_speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="46px"
                    android:text="0.0km/h"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="26px"
                    android:textColor="@color/text_bbbb"
                    android:text="平均速度"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="29px"
                    android:layout_height="29px"
                    android:background="@drawable/mean_tempo_speed"/>
                <TextView
                    android:id="@+id/sport_mean_tempo_speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="46px"
                    android:text="00′00″"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="26px"
                    android:textColor="@color/text_bbbb"
                    android:text="平均配速"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="29px"
                    android:layout_height="29px"
                    android:background="@drawable/max_tempo_speed"/>
                <TextView
                    android:id="@+id/sport_max_tempo_speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="46px"
                    android:text="00′00″"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="26px"
                    android:textColor="@color/text_bbbb"
                    android:text="最快配速"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="29px"
                    android:layout_height="29px"
                    android:background="@drawable/min_tempo_speed"/>
                <TextView
                    android:id="@+id/sport_min_tempo_speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="46px"
                    android:text="00′00″"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="26px"
                    android:textColor="@color/text_bbbb"
                    android:text="最慢配速"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <lecho.lib.hellocharts.view.LineChartView
        android:id="@+id/lvc_kcal"
        android:layout_width="780px"
        android:layout_height="221px"
        android:layout_marginTop="284px"
        android:layout_marginLeft="971px"
        android:transitionName="line" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="971px"
        android:layout_marginTop="234px"
        android:textSize="20px"
        android:textColor="@color/white"
        android:text="心率:次/分钟"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginTop="203px"
        android:layout_marginLeft="1283px"
        android:textColor="@color/text_f4ea"
        android:textSize="34px"
        android:text="心率曲线图"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1670px"
        android:layout_marginTop="507px"
        android:textSize="20px"
        android:textColor="@color/white"
        android:text="时间:分钟"/>
    <lecho.lib.hellocharts.view.LineChartView
        android:id="@+id/lvc_speed"
        android:layout_width="780px"
        android:layout_height="221px"
        android:layout_marginTop="698px"
        android:layout_marginLeft="971px"
        android:transitionName="line" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="971px"
        android:layout_marginTop="651px"
        android:textSize="20px"
        android:textColor="@color/white"
        android:text="速度:公里/小时"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginTop="615px"
        android:layout_marginLeft="1283px"
        android:textColor="@color/text_f4ea"
        android:textSize="34px"
        android:text="速度曲线图"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1670px"
        android:layout_marginTop="921px"
        android:textSize="20px"
        android:textColor="@color/white"
        android:text="时间:分钟"/>

</FrameLayout>
