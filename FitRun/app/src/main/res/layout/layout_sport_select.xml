                android:layout_height="650px"
                android:scaleType="fitXY"/>
            <net.fitrun.fitrungame.view.FilterImageView
                android:id="@+id/athletis_sport_image"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="650px"
