                    android:layout_width="30px"
                    android:layout_height="32px"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"/>
            </FrameLayout>
            <TextView
                android:id="@+id/distance_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12px"
                android:textSize="32px"
                android:textColor="@color/white"
                android:text=""/>
            <TextView
                android:id="@+id/distance_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="26px"
                android:layout_marginLeft="6px"
                android:textColor="@color/white"
                android:text="km"/>
            <com.fang.dashview.DashView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:dashWidth="2dp"
                app:lineWidth="4dp"
                app:lineColor="@android:color/white"
                app:dashOrientation="1"
                app:lineHeight="1dp"
                android:layout_marginLeft="40px"
                android:layout_marginTop="20px"
                android:layout_marginBottom="20px"/>
            <FrameLayout
                android:layout_marginLeft="40px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/time_image"
                    android:layout_width="30px"
                    android:layout_height="30px"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"/>
            </FrameLayout>
            <TextView
                android:id="@+id/time_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12px"
                android:textSize="32px"
                android:textColor="@color/white"
                android:text=""/>
            <TextView
                android:id="@+id/time_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="26px"
                android:layout_marginLeft="6px"
                android:textColor="@color/white"
                android:text="min"/>
            <com.fang.dashview.DashView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:dashWidth="2dp"
                app:lineWidth="4dp"
                app:lineColor="@android:color/white"
                app:dashOrientation="1"
                app:lineHeight="1dp"
                android:layout_marginLeft="40px"
                android:layout_marginTop="20px"
                android:layout_marginBottom="20px"/>
                <FrameLayout
                    android:layout_marginLeft="40px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/heart_image"
                        android:layout_width="30px"
                        android:layout_height="30px"
                        android:scaleType="fitXY"
                        android:layout_gravity="center"/>
                </FrameLayout>
                <TextView
                  android:id="@+id/heat_name"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="12px"
                  android:textSize="32px"
                  android:textColor="@color/white"
                  android:text=""/>
                <TextView
                    android:id="@+id/heat_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="26px"
                    android:layout_marginLeft="6px"
                    android:textColor="@color/white"
                    android:text="kcal"/>
        </LinearLayout>
