                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:id="@+id/stamina_text"
                    android:layout_marginTop="10px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="46px"
                    android:text="体 能 测 试"/>
                <TextView
                    android:id="@+id/stamina_text_e"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="32px"
                    android:text="FITNESS TEST"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:id="@+id/athletics_text"
                    android:layout_marginTop="10px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="46px"
                    android:text="在 线 竞 技"/>
                <TextView
                    android:id="@+id/athletics_text_e"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="32px"
                    android:text="COMPETITIVE"/>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="85px"
            android:layout_height="18px"
